<div class="content-wrapper">
  <div class="container">
    <% if @voter.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@voter.errors.count, "error") %> prohibited this voter from being saved:</h2>

        <ul>
        <% @voter.errors.full_messages.each do |msg| %>
          <div class="alert alert-warning"><li><%= msg %></li></div>
        <% end %>
        </ul>
      </div>
    <% end %>



    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>

    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            Currently Registered Voters
            <button type="button" id="new-voter" class="btn btn-info btn-sm pull-right" data-toggle="modal" data-target="#myModal"><i class="fa fa-plus-circle"> Add New Voter</i></button>
          </div>
          <div class="panel-body">
            <div class="table-responsive">


              <table class="table table-bordered table-hover">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>First Name #</th>
                    <th>Last Name</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Zip Code</th>
                    <th>Options</th>
                  </tr>
                </thead>
                <tbody>
                  <% @voters.each do |voter| %>
                  <%#= link_to(content_tag(:tr, display_search_results_row(voter)), edit_voter_path(voter)) %>
                    <tr>
                      <td><%= voter.id %></td>
                      <td><%= voter.first_name %></td>
                      <td><%= voter.last_name %></td>
                      <td><%= voter.address %></td>
                      <td><%= voter.city %></td>
                      <td><%= voter.state %></td>
                      <td><%= voter.zip %></td>
                      <td><a href="#" class="edit" id="<%= voter.id %>">Edit</a> / <%=link_to("Delete", voter_path(voter), method: :delete) %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div><!-- End Table-Responsive  -->
          </div><!-- End Panel Body  -->
        </div><!-- End Panel  -->
      </div><!-- End Col -->
    </div><!-- End Row -->

  </div><!-- End Container -->
</div><!-- End Content-Wrapper -->



<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Add New Voter</h4>
      </div>

      <div class="modal-body">
        <%= form_for @voter, class:"form-horizontal", action:"voters" do |f| %>
          <div class="box-body">
            <div class="row">

              <div class="form-group">
                <%= f.label 'First Name:', class:'col-sm-2 control-label' %>
                <div class="col-sm-4" id="first_name_div">
                  <%= f.text_field :first_name, class:"form-control", id:"first_name", name:"first_name", placeholder:"First Name" %>
                </div>
                <%= f.label 'Last Name:', class:'col-sm-2 control-label' %>
                <div class="col-sm-4" id="last_name_div">
                  <%= f.text_field :last_name, class:"form-control", id:"last_name", name:"last_name", placeholder:"Last Name" %>
                </div>
              </div><!-- /.form-group -->
            </div><!-- /.row -->

            <div class="row">
              <div class="form-group">
                <%= f.label 'Address:', class:'col-sm-2 control-label' %>
                <div class="col-sm-10" id="address_div">
                  <%= f.text_field :address, class:"form-control", id:"address", name:"address", placeholder:"Address" %>
                </div>
              </div><!-- /.form-group -->
            </div><!-- /.row -->

            <div class="row">
              <div class="form-group">
                <%= f.label 'City:', class:'col-sm-2 control-label' %>
                <div class="col-sm-6" id="city_div">
                  <%= f.text_field :city, class:"form-control", id:"city", name:"city", placeholder:"City" %>
                </div>

                <%= f.label 'State:', class:'col-sm-2 control-label' %>
                <div class="col-sm-2" id="state_div">
                  <%= f.text_field :state, class:"form-control", id:"state", name:"state", placeholder:"State" %>
                </div>
              </div><!-- /.form-group -->
            </div><!-- /.row -->

            <div class="row">
              <div class="form-group">
                <%= f.label 'Zip:', class:'col-sm-2 control-label' %>
                <div class="col-sm-3" id="zip_div">
                  <%= f.number_field :zip, class:"form-control", id:"zip", name:"zip", placeholder:"Zip" %>
                </div>
              </div><!-- /.form-group -->
            </div><!-- /.row -->

          </div><!-- /.box-body -->
        </div><!-- /.modal-body -->

        <div class="modal-footer">
          <%= f.submit 'Clear', type:'reset', :class =>"btn btn-default" %>
          <%= f.submit 'Submit', class:"btn btn-info pull-right" %>
        </div>
      <% end %>


    </div><!-- End Modal Content  -->
  </div>
</div> <!-- End Modal  -->
