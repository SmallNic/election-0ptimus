<div class="content-wrapper">
  <div class="container">

    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            Currently Registered Voters
            <button type="button" id="new-voter" class="btn btn-info btn-sm pull-right" data-toggle="modal" data-target="#myModal"><i class="fa fa-plus-circle"> Add New Voter</i></button>
          </div>
          <div class="panel-body">
            <div class="table-responsive">


              <table class="table table-bordered table-hover">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>First Name #</th>
                    <th>Last Name</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Zip Code</th>
                    <th>Options</th>
                  </tr>
                </thead>
                <tbody>
                  <% @voters.each do |voter| %>
                  <%#= link_to(content_tag(:tr, display_search_results_row(voter)), edit_voter_path(voter)) %>
                    <tr>
                      <td><%= voter.id %></td>
                      <td><%= voter.first_name %></td>
                      <td><%= voter.last_name %></td>
                      <td><%= voter.address %></td>
                      <td><%= voter.city %></td>
                      <td><%= voter.state %></td>
                      <td><%= voter.zip %></td>
                      <td><a href="#" class="edit" id="<%= voter.id %>">Edit</a> / <%=link_to("Delete", voter_path(voter), method: :delete) %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div><!-- End Table-Responsive  -->
          </div><!-- End Panel Body  -->
        </div><!-- End Panel  -->
      </div><!-- End Col -->
    </div><!-- End Row -->

  </div><!-- End Container -->
</div><!-- End Content-Wrapper -->



<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Add New Voter</h4>
      </div>
      <div class="modal-body">
        <% if @voter && @voter.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@voter.errors.count, "error") %> prohibited this voter from being saved:</h2>

            <ul>
            <% @voter.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <%= form_for @voter, class:"form-horizontal", action:"voters" do |f| %>
          <div class="box-body">

            <div class="form-group">


              <!-- <label for="first_name" class="col-sm-2 control-label">First Name:</label> -->
              <%= f.label 'First Name:', class:'col-sm-2 control-label' %><br />
              <div class="col-sm-4">
                <!-- <input type="text" class="form-control" id="first_name" name="first_name" placeholder="First Name"> -->
                <%= f.text_field :first_name, class:"form-control", id:"first_name", name:"first_name", placeholder:"First Name" %>

              </div>
              <!-- <label for="last_name" class="col-sm-2 control-label">Last Name:</label> -->
              <%= f.label 'Last Name:', class:'col-sm-2 control-label' %><br />

              <div class="col-sm-4">
                <!-- <input type="text" class="form-control" id="last_name" name="last_name" placeholder="Last Name"> -->
                <%= f.text_field :last_name, class:"form-control", id:"last_name", name:"last_name", placeholder:"Last Name" %>

              </div>
            </div>

            <div class="form-group">
              <!-- <label for="address" class="col-sm-2 control-label">Address:</label> -->
              <%= f.label 'Address:', class:'col-sm-2 control-label' %><br />

              <div class="col-sm-10">
                <!-- <input type="text" class="form-control" id="address" name="address" placeholder="Address"> -->
                <%= f.text_field :address, class:"form-control", id:"address", name:"address", placeholder:"Address" %>

              </div>
            </div>

            <div class="form-group">
              <!-- <label for="city" class="col-sm-2 control-label">City:</label> -->
              <%= f.label 'City:', class:'col-sm-2 control-label' %><br />

              <div class="col-sm-6">
                <!-- <input type="text" class="form-control" id="city"  name="city" placeholder="City"> -->
                <%= f.text_field :city, class:"form-control", id:"city", name:"city", placeholder:"City" %>

              </div>

              <!-- <label for="state" class="col-sm-2 control-label">State:</label> -->
              <%= f.label 'State:', class:'col-sm-2 control-label' %><br />

              <div class="col-sm-2">
                <!-- <input type="text" class="form-control" id="state" name="state" placeholder="State"> -->
                <%= f.text_field :state, class:"form-control", id:"state", name:"state", placeholder:"State" %>

              </div>
            </div>
            <div class="form-group">

              <!-- <label for="zip_code" class="col-sm-2 control-label">Zip Code:</label> -->
              <%= f.label 'Zip:', class:'col-sm-2 control-label' %><br />

              <div class="col-sm-2">
                <!-- <input type="integer" class="form-control" id="zip" name="zip" placeholder="Zip"> -->
                <%= f.number_field :zip, class:"form-control", id:"zip", name:"zip", placeholder:"Zip" %>

              </div>
            </div>

          </div><!-- /.box-body -->
          <div class="box-footer">
            <!-- <button type="reset" class="btn btn-default">Clear</button>
            <button type="submit" class="btn btn-info pull-right">Submit</button> -->

            <%= f.submit 'Clear', type:'reset', :class =>"btn btn-default" %>
            <%= f.submit 'Submit', class:"btn btn-info pull-right" %>


          </div><!-- /.box-footer -->
        <% end %>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>

    </div><!-- End Modal Content  -->
  </div>
</div> <!-- End Modal  -->
